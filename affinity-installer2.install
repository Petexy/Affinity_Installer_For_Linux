post_install()
{
	DESKTOP_USER=$(getent passwd | awk -F: '$3 >= 1000 && $3 < 65534 {print $1}' | head -n1)
	HOME=/home/$DESKTOP_USER
	sudo cp -rf /etc/skel/.* $HOME
	sudo chmod 755 $HOME/.local/share/linexin/shortcuts -R
	sudo chown $DESKTOP_USER $HOME/.local/share/linexin/shortcuts -R
	echo "post_install finished" >> /tmp/affinity-install.log
}

post_upgrade()
{
    post_install
}
